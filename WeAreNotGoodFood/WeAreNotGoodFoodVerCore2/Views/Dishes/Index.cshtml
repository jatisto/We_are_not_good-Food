@model IEnumerable<WeAreNotGoodFoodVerCore2.Models.Dish>

@{
    ViewData["Title"] = "Index";
}

<h2>Все блюда</h2>

<p>
    <h4 style="color: darkslategrey">
        <a asp-action="Create">Добавить блюдо</a>
    </h4>
</p>


    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id">
            <div class="col-sm-5 col-lg-5 col-md-5">
                <div class="thumbnail">
                    <img src="~/@item.ImagesDish" style="width: 100%"/>
                    <div class="caption">
                        <h3 class="pull-right">@item.Price.ToString("c")</h3>
                        <h3>
                            <a asp-controller="Dishes" asp-action="Details" asp-route-drinkId="@item.RestaurantId">@item.NameDish</a>
                        </h3>
                        <p>@item.Description</p>
                    </div>


                    <div class="addToCart text-right">
                        <p class="button ">
                            <a class="btn btn-success" id="cartButton" asp-controller="Dishes" asp-action="AddShoppingCart" asp-route-drinkId="@item.RestaurantId">
                                Add to cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>

        </a>
    }
