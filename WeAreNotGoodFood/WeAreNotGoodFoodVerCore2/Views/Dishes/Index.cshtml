@model IEnumerable<WeAreNotGoodFoodVerCore2.Models.Dish>

@{
    ViewData["Title"] = "Index";
}

<div class="col-sm-12 col-lg-12 col-md-12">

    <h2  style="padding-left: 20px">Все блюда</h2>

    <p>
        <h4 style="color: darkslategrey; padding-left: 20px">
            <a asp-action="Create">Добавить блюдо</a>
        </h4>
    </p>
    <br/>

    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id">
            <div class="col-sm-10 col-lg-10 col-md-10">
                <div class="thumbnail" style="padding: 10px">
                    <img src="~/@item.ImagesDish" style="width: 100%"/>
                    <div class="caption">
                        <h3 style="color: crimson" class="pull-right">@item.Price.ToString("N") .сом</h3>
                        <h3>
                            <a asp-controller="Dishes" asp-action="Details" asp-route-dishId="@item.RestaurantId">@item.NameDish</a>
                        </h3>
                        <p>@item.Description</p>
                    </div>


                    <div class="addToCart text-right">
                        <p class="button ">
                            <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-dishId="@item.Id">
                                Add to cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </a>
    }
</div>