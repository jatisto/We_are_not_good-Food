@model WeAreNotGoodFoodVerCore2.Models.Dish

@{
    ViewData["Title"] = "Details";
}



<div class="col-sm-12 col-lg-12 col-md-12">
    <div class="thumbnail" style="padding: 20px">

        <h2 style="color: darkgray">Ресторан <p style="color: darkcyan">@Html.DisplayFor(model => model.Restaurant.Name)</p></h2>
        <hr />  
        <div style="padding: 30px">
            <h3 style="color: lightblue">Блюда </h3>
            <h2 style="color: crimson">@Html.DisplayFor(model => model.NameDish)</h2>
            <hr />
            <dl class="dl-horizontal">
                <dt style="width: 20%; color: darkslategrey">
                    <h4 style="width: 10%; color: darkslategrey">Изображение</h4>
                </dt>
                <dd>
                    <img src="~/@Model.ImagesDish" width="550" height="350" />
                </dd>
                <dt style="width: 20%; color: darkslategrey">
                    <h4 style="width: 10%; color: darkslategrey">Цена</h4>
                </dt>
                <dd>
                    <h4 style="width: 50%; color: darkslategrey">@Html.DisplayFor(model => model.Price)</h4>
                </dd>
                <dt style="width: 20%; color: darkslategrey">
                    <h4 style="width: 10%; color: darkslategrey">Описание</h4>
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
        <div>
            <h4>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </h4>
        </div>
    </div>
</div>