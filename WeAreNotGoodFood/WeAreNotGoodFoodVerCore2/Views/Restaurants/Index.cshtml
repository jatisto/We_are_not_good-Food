@model IEnumerable<WeAreNotGoodFoodVerCore2.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
}

<h2>Все заведения</h2>

<p>
    <a asp-action="Create">Добавить заведение</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th style="width: 20%; color: cadetblue">Название</th>
                <th style="width: 60%; color: cadetblue">Изображение</th>
                <th style="width: 20%; color: cadetblue">Описание</th>
               
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <h4 style="color: darkslategrey"> @Html.DisplayFor(modelItem => item.Name)</h4>
            </td>
            <td>
                <img src="~/@item.ImagesRestaurant" width="700" height="450" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="color: cadetblue">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" style="color: cadetblue">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" style="color: cadetblue">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
